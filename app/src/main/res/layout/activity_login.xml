<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/back_icon"
        android:layout_height="30dp"/>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginStart="40dp"
            android:text="Connexion"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorTextView1"/>
        <EditText
            android:id="@+id/etEmail"
            android:background="@drawable/edittext_background"
            android:layout_width="300dp"
            android:paddingStart="10dp"
            android:layout_below="@id/tvTitre"
            android:layout_marginTop="20dp"
            android:hint=" Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/colorSplashText"
            android:textColor="@color/colorTextView1"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/ic_person" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_below="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etPassword"
            android:background="@drawable/edittext_background"
            android:backgroundTint="@color/colorSplashText"
            android:layout_width="300dp"
            android:paddingStart="10dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:hint=" Password"
            android:textColor="@color/colorTextView1"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/ic_lock" />

        <Button
            android:id="@+id/btConnexion"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_uiborder"
            android:text="Se connecter"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/etPassword"
            android:layout_marginStart="100dp"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:textColor="@color/colorWhite" />
        <LinearLayout
            android:id="@+id/linHelp"
            android:layout_width="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_centerHorizontal="true"
                android:text="Pas encore de compte?"
                android:textSize="17sp"
                android:textColor="@color/colorTextView"/>

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_marginStart="1dp"
                android:layout_centerHorizontal="true"
                android:text="CrÃ©ez-le ici."
                android:textSize="17sp"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/colorRed"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>